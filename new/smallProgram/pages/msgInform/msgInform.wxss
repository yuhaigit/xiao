/* pages/msgInform/msgInform.wxss */
@import "../../components/wxParse/wxParse.wxss" ;
.lists{
  width: 100%;
  height: 120rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx;
  /* 可注 */
  box-sizing: border-box;
}
.lists-left{
  width: 94rpx;
  height: 94rpx;
  border-radius: 50%;
  /* 可注 */
  box-sizing: border-box;
  border: 1rpx solid #ccc;
}
.lists-right{
  /* border: 1px solid black;
  box-sizing: border-box; */
  width: calc(100% - 126rpx);
  line-height: 50rpx;
  border-bottom: 1px solid rgba(246,246,246,1);
  /* padding-bottom: 16rpx; */
  height: 119rpx;
}
.lists-right-top{
  display: flex;
  justify-content: space-between;
  margin-bottom: 14rpx;
}
.lists-right-bottom{
  display: flex;
  justify-content: space-between;
}
.msgs{
  font-size:30rpx;
  font-family:PingFang-SC-Bold;
  font-weight:bold;
  color:rgba(51,51,51,1);
  margin-top: 4rpx;
}
.time{
  font-size:24rpx;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:rgba(153,153,153,1);
}
.tips{
  height: 33rpx;
  line-height: 33rpx;
  font-size:24rpx;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:rgba(153,153,153,1);
  /* 字数多后面的以省略号显示 */
  width: 528rpx;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}
.points{
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}
.num{
  width:24rpx;
  height:24rpx;
  background:rgba(208,47,47,1);
  font-size:18rpx;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:rgba(255,255,255,1);
  border-radius: 50%;
  text-align: center;
  line-height: 24rpx;
  position: relative;
  bottom: -5rpx;
}
.noMsg{
  width: 139rpx;
  height: 165rpx;
  position: absolute;
  top: 364rpx;
  left: 306rpx;
}
.noMsgInfo{
  font-size:36rpx;
  font-family:PingFang-SC-Medium;
  font-weight:500;
  color:rgba(216,216,216,1);
  position: absolute;
  top: 553rpx;
  left: 267rpx;
}
.wxParse-p,.wxParse-inline{
  overflow:hidden;
  text-overflow:ellipsis;
  white-space:nowrap
}

/* 新增加载效果 */
.my-scroll {
    height: 100%;
    width: 100%;
}
.my-scroll-msgModule {
    font-size: 14px;
    color: #7e8a9b;
    text-align: center;
    overflow: hidden;
}
.my-scroll-refreshModule-content {
    display: flex;
    align-items: center;
    justify-content: center;
}
.my-scroll-msgModule-icon {
    width: 20px;
    height: 20px;
}
.my-scroll-loadmoreModule {
    height: 45px;
    display: flex;
    align-items: center;
    justify-content: center;
}
.my-scroll-msgModule-icon-loading {
    animation: loading 1s linear infinite;
}
@keyframes loading {
    0% {
        transform: rotate(0deg);
    }

    25% {
        transform: rotate(90deg);
    }

    50% {
        transform: rotate(180deg);
    }

    75% {
        transform: rotate(270deg);
    }

    100% {
        transform: rotate(360deg);
    }
}

