/* 导航 */
.content{
    width: 100%;
}


/* 页面 */
page{
    background-color:#f6f6f6;
}
.container{
    width: 100%;
    height:100%; 
    background-color:#F6F6F6;
    padding:24rpx 30rpx;
    box-sizing:border-box;
}


/* 圈子列表 */
.CircleListBox{
    width: 100%;
}
.CircleListBox .CircleList{
    width: 100%;
}
.van-cell{
    padding:12rpx 12rpx 0 12rpx !important;
    margin-bottom:24rpx;
    border-radius:12rpx;
    overflow:hidden;
    line-height:unset;
}
.van-cell::after{
    border: unset!important;
}
.CircleListBox .CircleList .textRed{
    color: #D02F2F;
    font-weight:bold;
    position:relative;
    top:-7rpx;
}
.CircleListBox .CircleListImg{
    width:100%;
    position: relative;
}
.CircleListBox .CircleListImg .imgs{
    width: 164rpx;
    height: 96rpx;
    margin-right: 10rpx;
}
.CircleListBox .CircleListImg .userName{
    width:400rpx;
    position: absolute;
    top: 0;
    left:172rpx;
    text-overflow: ellipsis;
    white-space: normal;
    overflow: hidden;
    display: -webkit-box;
    -webkit-line-clamp: 1;
    -webkit-box-orient: vertical;
    font-size:28rpx;
    color: #333333;
    font-weight:500;
}
.CircleListBox .CircleListImg .userTime{
    width:400rpx;
    position:absolute;
    top:51rpx;
    left:172rpx;    
    text-overflow: ellipsis;
    white-space: normal;
    overflow: hidden;
    display: -webkit-box;
    -webkit-line-clamp: 1;
    -webkit-box-orient: vertical;
    font-size:24rpx;
    color: #999999;
    font-weight:400;
}
.van-cell__right-icon-wrap{
    position: relative;
    top: -5rpx;
}
.noDataBox{
    display: inline-block;
    width: 100%;
    height: 100%;
    text-align:center;
    padding:10% 0;
}
.noDataBox text{
    display: inline-block;
    color: #999999;
}