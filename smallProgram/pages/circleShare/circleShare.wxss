@import "../../utils/iconfont.wxss";

page{
    background-color:#F6F6F6;
}
.container{
    width: 100%;
    height:100%; 
    background-color:#F6F6F6;
}
view{
    /* display: inline-block; */
}
.iconfont{
    font-size: 36rpx;
}
.icon_wodeshoucang{
    color: #999999;
}


.content{
    width: 100%;
}
/* 打卡日记 */
.page-body{
    width: 100%;
    height:100%; 
    padding: 20rpx 0;
    box-sizing: border-box;
}
.CardDiary{
    width: 100%; 
    padding: 0 30rpx;
    box-sizing: border-box;
}
.CardDiary .CardDiaryInfos{
    width: 100%;
    height: 532rpx;
    border-radius:12rpx;
    border:1px solid rgba(216,216,216,1);
    position: relative;
    overflow: hidden;
}
.CardDiary .imgs{
    width: 100%;
    height: 100%; 
}
.CardDiaryInfos .likes{
    display: inline-block;
    color: #333333;
    position: absolute;
    top: 0;
    right:10rpx;
}

.goodListInfos .userInfos_l{
    display: inline-block;
    width: 80%;
    float: left;
    padding-right: 0;
    box-sizing: border-box;
}
.goodListInfos .userHeads{
    float: left;
    margin-right: 15rpx;
}
.goodListInfos .userHead{
    width: 72rpx;
    height: 72rpx;
    border-radius: 50%;
    float: left;
}
.goodListInfos .userSex{
    width: 18rpx;
    height: 18rpx;
    border-radius: 50%;
    float: left;
    position: relative;
    top:52rpx;
    left:-10rpx;
}
.goodListInfos .userName{
    width:70%;
    font-size:24rpx;
    color: #333333;
    float: left;
    font-weight:bold;
    text-overflow: ellipsis;
    white-space: normal;
    overflow: hidden;
    display: -webkit-box;
    -webkit-line-clamp: 1;
    -webkit-box-orient: vertical;
}
.goodListInfos .userTime{
    /* width:60%; */
    font-size:22rpx;
    color: #999999;
    float: left;
    text-overflow: ellipsis;
    white-space: normal;
    overflow: hidden;
    display: -webkit-box;
    -webkit-line-clamp: 1;
    -webkit-box-orient: vertical;
}
.goodListInfos .zan{
    color: #D8D8D8;
    font-size:22rpx;
    display: inline-block;
    float:right;
    position:relative;
    top:10rpx;
}
.goodListInfos .userInfos_ls{
    width: 100%;
    padding: 0 15rpx;
    box-sizing: border-box;
}
.goodListInfos .userNames{
    width: 100%;
    font-size:28rpx;
    color: #333333;
    text-overflow: ellipsis;
    white-space: normal;
    overflow: hidden;
    display: -webkit-box;
    -webkit-line-clamp: 1;
    -webkit-box-orient: vertical;
}
.goodListInfos .userNums{
    font-size:22rpx;
    color: #999999;
    text-overflow: ellipsis;
    white-space: normal;
    overflow: hidden;
    display: -webkit-box;
    -webkit-line-clamp: 1;
    -webkit-box-orient: vertical;
}
.CardDiary .CardDiaryUser{
    width: 100%;
    max-height: 188rpx;
    position: absolute;
    bottom: 0;
    left: 0;
    background-color: #FFFFFF;
    padding: 12rpx 24rpx;
    box-sizing: border-box;
}
.CardDiaryUser .userInfos_bottom{
    width: 85%;
    background-color: #FAFAFA;
    float:right;
    margin-top: 10rpx;
    position: relative;
    border-radius:6rpx;
    overflow: hidden;
}
.CardDiaryUser .courseImg{
    width: 136rpx;
    height: 80rpx;
    float: left;
    overflow: hidden;
    margin-right: 10rpx;
}
.CardDiaryUser .userNamess{
    color: #333333;
    padding:5rpx 0;
}
.CardDiaryUser .userTimes{
    color: #999999;
}
.CardDiaryUser .imgTexts{
    position: absolute;
    top:10rpx;
    right:20rpx;  
}

.CardDiaryUser .courseNames{
    width: 100%;height: 60rpx;
    line-height:60rpx;
    position:  absolute;
    left: 0;
    top:-58rpx;
    font-size:30rpx;
    color: #ffffff;
    background:rgba(0,0,0,0.6);
    text-align: center;
}
.CardDiaryUser .courseNames .courseTexts{
    width: 100%;height: 60rpx;
    font-size:30rpx;
    color: #ffffff;
    text-align: left;
    padding: 0 23rpx;
    box-sizing: border-box;
    text-overflow: ellipsis;
    white-space: normal;
    overflow: hidden;
    display: -webkit-box;
    -webkit-line-clamp: 1;
    -webkit-box-orient: vertical;
}


/* 底部菜单栏 */
.buttomBtn{
    width: 100%;
    background-color: #FFFFFF;
    height:96rpx ;
    position: fixed;
    bottom: 0;
    left: 0;
    display: flex;
    justify-content: space-around;
    align-items: center;
}
.buttomBtn .texts{
    display: inline-block;
    color: #333333;
    font-size: 33rpx;
    font-weight:400;
}
