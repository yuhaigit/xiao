/* 圈子列表 */
.van-cell{
    padding:10px 15px 5px 15px !important;
    line-height:unset!important;
}
.CircleListBox{
    width: 100%;
}
.CircleListBox .CircleList{
    width: 100%;
}
.CircleListBox .CircleListImg{
    width:100%;
    position: relative;
}
.CircleListBox .CircleListImg .imgs{
    width: 164rpx;
    height: 96rpx;
    margin-right: 10rpx;
}
.CircleListBox .CircleListImg .userName{
    width:400rpx;
    position: absolute;
    top: 0;
    left:172rpx;
    text-overflow: ellipsis;
    white-space: normal;
    overflow: hidden;
    display: -webkit-box;
    -webkit-line-clamp: 1;
    -webkit-box-orient: vertical;
    font-size:32rpx;
    color: #333333;
    font-weight:500;
}
.CircleListBox .CircleListImg .userTime{
    width:400rpx;
    position:absolute;
    top:51rpx;
    left:172rpx;    
    text-overflow: ellipsis;
    white-space: normal;
    overflow: hidden;
    display: -webkit-box;
    -webkit-line-clamp: 1;
    -webkit-box-orient: vertical;
    font-size:24rpx;
    color: #999999;
    font-weight:400;
}
