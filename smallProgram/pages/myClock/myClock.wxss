page{
	background-color:#F6F6F6;
}
.content{
    width: 100%;
    height:100%; 
    background-color:#F6F6F6;
}


.switchBox,.times{
	height:96rpx;
    padding-top:26rpx !important;
}
.switch{
    right: 5rpx;
}
.times{
    width: 100%;
    margin-top: 20rpx;
}
.pickerBox{
    width: 100%;
    position: fixed;
    bottom: 0;
    left: 0;
}   

.van-picker__cancel{
    color: #999999 !important;
}

.van-picker__confirm {
    color: #5BF466 !important;
}

.tips{
    font-size:24rpx;
    color: #999999;
    font-weight:400;
    padding: 0 30rpx;
    box-sizing: border-box;
}
.van-cell::after{
    border-bottom: unset !important;
}
.van-cell--clickable.van-cell--hover {
    background-color:#fff !important;
}




.Btns{
	width: 100%;
	display:inline-block;
	padding:70rpx 30rpx;
	box-sizing: border-box;
	/* margin-top: 60rpx; */
}
.Btns .saveBtn{
	height:96rpx;
	line-height: 96rpx;
	width: 100%;
	background:rgba(216,216,216,1);
	border-radius:53rpx;
	font-size:32rpx;
	color: #999999;
	font-weight:400;
}
.Btns .saveBtns{
	background-color:#D8D8D8;
	color: #999999;
	font-size:32rpx;
}
.Btns .saveBtnsS{
	background-color: #EA5C5C;
	color: #fff;
	font-size:32rpx;
}

