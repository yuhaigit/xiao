.content{
    width: 100%;
}
.container{
    width: 100%;
    height:100%;
    background-color:#F6F6F6;
}
.page-body{
    width: 100%;
    background-color: #fff;
    padding: 30rpx 0;
    box-sizing: border-box;
}

/* 评分详情 */
.resultInfo {
    display: flex;
    justify-content: space-around;
    padding: 0 70rpx;
    box-sizing: border-box;
    position: relative;
}
.resultInfo .imgs{
    /* width:238rpx;
