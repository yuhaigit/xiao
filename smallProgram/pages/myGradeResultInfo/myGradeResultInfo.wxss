/* 底部按钮 */
.upBtns{
    width: 100%;
    display: inline-block;
    position: absolute;
    left: 0;
    bottom: 40rpx;
    padding:0 30rpx;
    box-sizing: border-box;
} 
.upBtns .uploadFinishBtn{
    background-color: #ff6666;
    color: #fff;
    display: block;
    width: 100%;
    text-align: center;
    font-size: 32rpx;
    border-radius: 48rpx;
    background: -webkit-linear-gradient(left, #EA5C5C , #D02F2F);
}
