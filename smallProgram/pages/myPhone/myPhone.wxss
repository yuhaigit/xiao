/* 手机号 */
.container .Topinfos{
	width: 100%;
	height:70rpx ;
	background-color: #f6f6f6;
	padding: 0 30rpx;
	box-sizing: border-box;
	line-height: 70rpx;
}
button::after{
	border: none;
}
.container .Topinfos button{
	font-size:30rpx;
	font-weight:400;
	color: #BCA47C;

	background:unset;
	border:unset !important;
	border-color:unset;
	display:inline-block;
	padding:unset;
	margin:unset;
	line-height:unset;
	border-radius:unset;
	-webkit-tap-highlight-color:unset;
	text-decoration:unset;
}
.Btns{
	width: 100%;
	display:inline-block;
	padding:50rpx 30rpx;
	box-sizing: border-box;
	/* margin-top: 60rpx; */
}
.Btns .saveBtn{
	height:96rpx;
	line-height: 96rpx;
	width: 100%;
	background:rgba(216,216,216,1);
	border-radius:53rpx;
	font-size:32rpx;
	color: #999999;
	font-weight:400;
}

.Btns .saveBtns{
	background-color:#D8D8D8;
	color: #999999;
	font-size:32rpx;
}
.Btns .saveBtnsS{
	background-color: #EA5C5C;
	color: #fff;
	font-size:32rpx;
}
